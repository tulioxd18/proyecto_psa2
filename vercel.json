{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/convert",
      "dest": "/api/convert.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}